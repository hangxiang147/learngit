		$(function() {
			var url = location.href;
	        url = url.replace("http://", "");
	        var list = url.split("/");
	        var urljt = "";
	        for (var i=1; i<list.length; ++i) {
	        	urljt += list[i]+"/";
	        }
	        if (urljt !="") {
// 	        	$("#navbar a").each(function () {
// // 	                if ($(this).attr("data-prefix") == urljt ) {
// // 	                	if ($(this).parent().parent().attr("class") == "dropdown-menu") {
