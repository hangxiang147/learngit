<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="s" uri="/struts-tags" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<!DOCTYPE html> 
<html lang="zh-CN">
<head>
<script src="/assets/js/layer/layer.js"></script>
<script src="/assets/icon/iconfont.js"></script>
<script type="text/javascript">
$(function(){
	set_href();
	$("[data-toggle='tooltip']").tooltip();
});
function showPartnerDetailContent(content){
	layer.alert(content, {offset:'100px',title:'明细'});
}
function deletePartnerDetail(id, rewardType){
	layer.confirm("确定删除？",{offset:'100px'},function(index){
		layer.close(index);
		location.href="administration/partner/deletePartnerDetail?id="+id+"&rewardType="+rewardType;
		Load.Base.LoadingPic.FullScreenShow(null);
	});
}
</script>
<style type="text/css">
	.icon {
	   width: 1.5em; height: 1.5em;
	   vertical-align: -0.15em;
	   fill: currentColor;
	   overflow: hidden;
	}
</style>
</head>
<body>
	<div class="container-fluid">
      <div class="row">
        <s:set name="panel" value="'partnerCenter'"></s:set>
        <%@include file="/pages/administration/panel.jsp" %>	
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h3 class="sub-header" style="margin-top:0px;">内容明细列表</h3> 
        	<form action="administration/partner/partnerDetailList" class="form-horizontal" onsubmit="Load.Base.LoadingPic.FullScreenShow(null)">
        	<div class="form-group">
        		<label class="control-label col-sm-1">姓名</label>
        		<div class="col-sm-2">
        			<input class="form-control" autoComplete="off" name="staffName" value="${staffName}"/>
        		</div>
        		<label class="control-label col-sm-1">类型</label>
        		<div class="col-sm-2">
        		<select class="form-control" name="type">
       	  	  		<option value="">全部</option>
       	  	  		<option ${type=='已享受福利&待遇'?'selected':'' } value="已享受福利&待遇">已享受福利&待遇</option>
       	  	  		<option ${type=='已进行的培训和拓展'?'selected':'' } value="已进行的培训和拓展">已进行的培训和拓展</option>
       	  	  		<option ${type=='合伙人章程&规定'?'selected':'' } value="合伙人章程&规定">合伙人章程&规定</option>
       	  	  		<option ${type=='奖励'?'selected':'' } value="奖励">奖励</option>
       	  	  	</select>
        		</div>
        		<button class="btn btn-primary" type="submit" style="margin-left:3%">查询</button>
        	</div>
        	</form>
        	<button class="btn btn-primary" onclick="goPath('administration/partner/addPartnerDetail')">新增</button>
        	<div class="sub-header"></div>
			<div class="table-responsive">
            	<table class="table table-striped">
	              <thead>
	              	<tr>
	              		<td style="width:5%">序号</td>
	              		<td>姓名</td>
	              		<td>类型</td>
	              		<td>奖励类型</td>
	              		<td>额度（元）</td>
	              		<td>主题</td>
	              		<td style="width:9%">操作</td>
	              	</tr>
	              </thead>
	              <tbody>
	              	<c:set var="startIndex" value="${(page-1)*limit }"></c:set>
					<c:forEach items="${partnerDetailList}" var="detail" varStatus="status">
						<tr>
						<td>${status.index+startIndex+1}</td>
						<td>${detail[1]}</td>
						<td>${detail[2]}</td>
						<td>${detail[3]==''?'——':detail[3]}</td>
						<td>${detail[4]==''?'——':detail[4]}</td>
						<td>${detail[5]}</td>
						<td>
							<a href="javascript:showPartnerDetailContent('${detail[6]}')">
		              			<svg class="icon" aria-hidden="true" title="查看明细" data-toggle="tooltip">
            						<use xlink:href="#icon-Detailedinquiry"></use>
            					</svg>
		              		</a>
		              		&nbsp;
		              		<a href="javascript:deletePartnerDetail('${detail[0]}','${detail[3]}')">
		              			<svg class="icon" aria-hidden="true" title="删除" data-toggle="tooltip">
            						<use xlink:href="#icon-delete"></use>
            					</svg>
		              		</a>
						</td>
						</tr>
					</c:forEach>
	              </tbody>
		        </table>
		        <div class="dropdown" style="margin-top:25px;">
		           	<label>每页显示数量：</label>
		           	<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
		           		${limit}
		           		<span class="caret"></span>
		           	</button>
		           	<ul class="dropdown-menu" aria-labelledby="dropdownMenu1" style="left:104px;min-width:120px;">
					    <li><a class="dropdown-item-20" href="#">20</a></li>
					    <li><a class="dropdown-item-50" href="#">50</a></li>
					    <li><a class="dropdown-item-100" href="#">100</a></li>
				    </ul>
		           	<input type="hidden" id="page" value="${page}"/>
		           	<input type="hidden" id="limit" value="${limit}" />
		           	<input type="hidden" id="totalPage" value="${totalPage }" />
		        	</div>
		        <%@include file="/includes/pager.jsp" %>
		     </div>
      	</div>
      </div>
    </div>
</body>
</html>